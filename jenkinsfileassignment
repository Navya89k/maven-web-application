pipeline {
    agent any
parameters {
  choice choices: ['main', 'dev', 'qa', 'test'], description: 'all the current branches', name: 'BranchNamegit'
}
    stages {
        stage('Build') {
 when {
                branch 'main'
            }
            steps {
                echo 'Building the stage'
            }
        }

        stage('Run the tests in Parallel') {
            when {
                branch 'main'
            }
            parallel {      // parallely started
                stage('test-1') {
                    steps {
                        echo 'Running test-1'
                    }
                }
stage('test-2') {
                    steps {
                        echo 'Running test-2'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the stage'
            }
        }
    }
}
